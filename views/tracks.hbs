<div class="tracks-table">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Listen</th>
            </tr>
        </thead>
        <tbody>
            {{#each tracks}}
            <tr>
                <th scope="row">{{track_number}}</th>
                <td>{{name}}</td>
                <td>
                    <audio controls>
                        <source src="{{preview_url}}">
                    </audio>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>